= link_to 'Return to List of Forms', forms_path
%h2 Create New IRB Form
= form_tag forms_path, :method => :post do
    
    %div{:class => 'form-group'}
        = label :form, :title, 'Title'
        = text_field :form, :title, :class => 'form-control'
    
    %div{:class => 'form-group'}
        = label :form, :submission_date, 'Submission Date'
        = date_field :form, :submission_date, :class => 'form-control'
        
    %div{:class => 'form-group'}
        = label :form, :researcher, 'Researcher Name'
        = text_field :form, :researcher, :class => 'form-control'
    
    = submit_tag 'Save Changes'